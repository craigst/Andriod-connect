# ADB Device Manager Configuration
# Copy this file to .env and adjust values for your environment

# Timezone
TZ=Europe/London

# Python settings
PYTHONUNBUFFERED=1

# Host paths for Unraid (adjust these to match your setup)
# Example: /mnt/user/appdata/adb-device-manager
DATA_PATH=../data
LOGS_PATH=../logs
APK_PATH=../apk
PAPERWORK_PATH=../paperwork

# Templates are built into the container - only mount if you need to customize
# TEMPLATES_PATH=../templates

# Container port
HOST_PORT=5020
CONTAINER_PORT=5020

# Image version
IMAGE_TAG=latest
